/* pages/receive/receive.wxss */
.body{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: bold;
}
.swiper-tab-item{
  display: inline-block;
  width: 50%;
  color:rgb(100, 91, 91);
}
.active{
  color:#60A7E9;
  border-bottom: 4rpx solid rgb(84, 160, 231);
}

.content{
  position: relative;
}
.content .img{
  position: absolute;
  left:7%;
  top:100px;
  border-radius: 15%;
}
.content .img image{
  border-radius: 25%;
}
.number{
  margin-top: 10px;
}
.txt{
  font-size: 14px;
}
.btn{
  margin-top: 16px;
  width: 28%;
  height: 30px;
  font-size: 14px;
  line-height: 30px;
}
.con{
  margin-top: 10px;
  display: block;
}
.noVolunteerview{
  width: 100%;
  height: 1000rpx;
  margin: 0;
  padding: 0;
  position: relative;
}
.noVolunteer{
  width: 100%;
  height: 100%;
}








